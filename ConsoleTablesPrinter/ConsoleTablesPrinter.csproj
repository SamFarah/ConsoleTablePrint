<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net6.0;net7.0;net8.0;net9.0</TargetFrameworks>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<Version>1.0.0</Version>
		<Authors>Sam Farah</Authors>
		<PackageId>ConsoleTablePrinter</PackageId>
		<Description>Lightweight console table printer with styling and attribute support</Description>
		<PackageTags>console table printer formatting attributes</PackageTags>
		<RepositoryUrl>https://github.com/SamFarah/ConsoleTablePrint</RepositoryUrl>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<PackageReadmeFile>readme.md</PackageReadmeFile>
		<PackageProjectUrl>https://github.com/SamFarah/ConsoleTablePrint</PackageProjectUrl>
	</PropertyGroup>

	<ItemGroup>
		<None Include="docs\readme.md" Pack="true" PackagePath="\"/>
	</ItemGroup>

</Project>
